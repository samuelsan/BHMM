<header>
  <h1>All locations</h1>
  <div class="nav"> 
    User: <%= @user.name %>
    <a href='/' class='button'>Home</a>
  </div>
</header>

<body>
<% Location.all.each do |location| %>
  <div class = "listing">
    <h2><%= location.address %></h2>
    <div>$<%=location.rate %> <br>
    Pets: <%= (location.allow_pets?)? "yes" : "no"%> <br>
    <div class="button"> MOVE IN! </div><br></div>
  </div>
<% end %>
</body>
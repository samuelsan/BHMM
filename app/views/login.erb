<% if @login_error %>
<div>
  <strong>Wrong Email or Password.  Try again!</strong>
</div>
<% end %>
<div style="background: rgba(0,0,0,0.2); padding: 10px; width: 500px">
  <form method="post" action="/login">
    <table style="width: 400px">
      <tr>
        <td><h2><label>Email:</label></h2></td>
        <td><input type="text" name="email"></td>
      </tr>
      <tr>    
        <td><h2><label>Password:</label></h2></td>
        <td><input type="password" name="password"> </td>
      </tr>
      <tr>
				<td><button type="submit" class="btn btn-info" style="float:right;"> Login </button>
					</td> 
				<td>
						<button type="button" style="float:left;"class="btn btn-info" data-toggle="modal" data-target="#NewUserModal">Create an account</button> </td>
      </tr>
    </table>
  </form>
</div>


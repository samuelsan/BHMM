<% if @login_error %>
<div>
  <strong>Wrong Email or Password.  Try again!</strong>
</div>
<% end %>
<div style="background: rgba(0,0,0,0.2); padding: 10px; width: 500px">
  <form method="post" action="/login">
    <table style="width: 275px">
      <tr>
        <td><h2><label>Email:</label></h2></td>
        <td><input type="text" name="email"></td>
      </tr>
      <tr>    
        <td><h2><label>Password:</label></h2></td>
        <td><input type="password" name="password"> </td>
      </tr>
      <tr>
        <td><input type="submit" class="actionbtn" value="Login"></td> 
      </tr>
    </table>
  </form>
   <button type="button" class="actionbtn" data-toggle="modal" data-target="#myModal">
    Create an account
  </button>
</div>

<!-- Modal file for adding new User  -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create User</h4>
      </div>
      <div class="modal-body">
        <%= erb :'partials/new_user'%>
      </div>
    </div>
  </div>

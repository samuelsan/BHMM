<header>
  <span class="title"><h1>Tenant Records</h1></span>
</header>

<h2>Upcoming Due Date: </h2>
<h2>Amount due:</h2>

<table class="table table-hover">
	<thead>
		<tr>
      <th>date paid</th>
			<th>address</th>
			<th>amount paid</th>
   </tr>
 </thead>
 <tbody>
   <% @record.each do |r|%>
   <tr>
    <td> <%=r.date_paid%> </td>  
    <td><%= r.location.address %> </td>      
    <td><%= r.amount_paid %> </td>    
  </tr> 
  <% end %>
</tbody> 
</table>

<p>Amount payable: <%= @amount_due - current_user.account_balance%> </p> 
<a href='/tenant/pay' id='pay'><button>Pay Rent</button></a>
</div>

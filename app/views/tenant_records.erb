<header>
  <span class="title"><h1>Tenant Records</h1></span>
</header>

<h2>Upcoming Due Date: <%= @record.last.date_due%></h2>
<h2>Amount due: <%= @amount_due %></h2>
<p>Current Balance : <%= current_user.account_balance%> </p> 
<div class="row">
	<div class="col-sm-offset-2 col-sm-8">
<h2> Payment History </h2> 
<table class="table table-hover">
	<thead>
		<tr>
      <th>date paid</th>
			<th>address</th>
			<th>amount paid</th>
   </tr>
 </thead>
 <tbody>
   <% @payment.each do |r|%>
   <tr>
    <td> <%=r.created_at.strftime("%F %T")%> </td>  
    <td><%= r.location.address %> </td>      
    <td><%= r.amount %> </td>    
  </tr> 
  <% end %>
</tbody> 
</table>
</div> </div> 
<a href='/tenant/pay' id='pay'><button>Pay Rent</button></a>
</div>

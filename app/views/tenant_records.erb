<header>
<h1>Tenant Records</h1>
  <div class="nav"> 
    User: <%= @user.name %>
    <a href='/tenant' class='button'>Home</a>
    <a href='/tenant/records' class='button'>View Records</a>
    <a href='/locations' class='button'>All Locations</a>
  </div>
</header>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Address</th>
			<th>Amount Due</th>
			<th>Due Date</th>
			<th>Amount Paid</th>
			<th>Date Paid</th>
	</tr>
</thead>
<tbody>
	<% @record.each do |r|%>
	<tr>
		<td><%= r.location.address %> </td>   
		<td><%= r.amount_due%> </td>   
		<td> Due Date here </td>   
		<td><%= r.amount_paid %> </td>   
		<td> date paid goes here </td>   
	</tr> 
<% end %>
	</tbody> 
</table>


<a href='/' id='pay'>Pay</a>
</div>

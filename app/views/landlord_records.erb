<h1>My Records</h1>
  <div class="nav"> 
    <a href='/landlord' class='navbutton'>Home</a>
    <a href='/landlord/records' class='navbutton'>Records</a>
    <a href='/landlord/my_locations' class='navbutton'>My Locations</a>
    <a href='/locations' class='navbutton'>All Locations</a>
    <span id="username">User: <%= @user.name %></span>
    <form type="submit" method="post" action="/logout"><button class="actionbutton" id="logout">logout</button></form>
  </div>

<table class="table table-hover">
	<thead>
		<tr>
			<th>address</th>
			<th>tanent</th>
			<th>amount due</th>
			<th>due date</th>
			<th>amount paid</th>
	</tr>
</thead>
<tbody>
	<% @record.each do |r|%>
	<tr>
		<td><%= r.location.address %> </td>   
		<td><%= User.find(r.tenant_id).name%> </td>   
		<td> <%= r.amount_due %> </td>   
		<td><%= r.date_due %> </td>   
		<td> <%=r.amount_paid%> </td>   
	</tr> 
<% end %>
	</tbody> 
</table>

<h2>Tenants info:</h2>
<table class="table table-hover">
	<thead>
		<tr>
			<th>name</th>
			<th>address</th>
			<th>phone</th>
			<th>email</th>
	</tr>
</thead>
<tbody>
	<% @record.select(:tenant_id,:location_id).distinct.each do |r|%>
		<% a = User.find(r[:tenant_id]) %>
	<tr>
		<td><%= a.name %> </td>   
		<td><%= Location.find(r[:location_id]).address %> </td>   
		<td> <%= a.phone %> </td>   
		<td><%= a.email %> </td>   
	</tr> 
<% end %>
	</tbody> 
</table>

